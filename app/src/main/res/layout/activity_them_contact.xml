<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.firebase.ThemContactActivity"
    >
    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:inputType="textAutoComplete"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Tên:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Trần Văn Hòa"
        android:inputType="textPersonName"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập SDT:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0123456789"
        android:inputType="phone"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Môn giảng dạy:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtmon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Toán"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kinh nghiệm giảng dạy:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtKN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1 năm"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TPHCM"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới tính:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtGioiTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nữ"
        android:textSize="20sp"
        />

    <Button
        android:onClick="xuLyThemMoi"
        android:id="@+id/btnDongYThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng tin"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
